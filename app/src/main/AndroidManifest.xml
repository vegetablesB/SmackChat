<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.azhong.smackchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".founction.user.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.ConnectionService" />

        <activity android:name=".founction.main.activity.MainActivity" />
        <activity
            android:name=".common.base.BaseActivity"
            android:label="基类" />
        <activity android:name=".founction.chat.activity.ChatActivity" />
        <activity android:name=".founction.user.activity.RegisterActivity" />
        <activity android:name=".founction.group.activity.JoinGroupActivity" />
        <activity android:name=".founction.group.activity.CreateGroupActivity" />
        <activity android:name=".founction.group.activity.GroupListActivity" />
        <activity android:name=".founction.group.activity.GroupChatActivity" />
        <activity android:name=".founction.group.activity.UserListActivity"></activity>
    </application>

</manifest>